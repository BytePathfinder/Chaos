{
	// pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
	"pages": [{
		"path": "pages/index/Index",
		"style": {
			"navigationStyle": "custom",
			"enablePullDownRefresh": true,
			"onReachBottomDistance": 5
		}
	}, {
		"path": "pages/category/Category",
		"style": {
			"navigationStyle": "custom",
			"enablePullDownRefresh": true
		}
	}, {
		"path": "pages/cart/Cart",
		"style": {
			"navigationBarTitleText": "购物车",
			"enablePullDownRefresh": false
		}
	}, {
		"path": "pages/my/My",
		"style": {
			"navigationBarTitleText": "我的",
			"enablePullDownRefresh": true
		}
	}, {
		"path": "pages/BulletinBoard/BulletinBoard",
		"style": {
			"enablePullDownRefresh": false,
			"navigationStyle": "custom"
		}

	}],
	// 全局样式
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "秋叶为民",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8",
		"backgroundTextStyle": "light",
		"dynamicRpx": true,
		"transparentTitle": "auto",
		"rpxCalcBaseDeviceWidth": 2000,
		"app-plus": {
			"softinputNavBar": "none",
			"softinputmode": "adjustPan"
		}
	},
	// 底部导航栏
	"tabBar": {
		"backgroundColor": "#ffffff",
		"color": "#000",
		"selectedColor": "#ff9d1a",
		"list": [{
			"iconPath": "static/navbar/png/home.png",
			"selectedIconPath": "static/navbar/png/home-fill.png",
			"pagePath": "pages/index/Index",
			"text": "首页"
		}, {
			"iconPath": "static/navbar/png/category.png",
			"selectedIconPath": "static/navbar/png/category-fill.png",
			"pagePath": "pages/category/Category",
			"text": "分类"
		}, {
			"iconPath": "static/navbar/png/cart.png",
			"selectedIconPath": "static/navbar/png/cart-fill.png",
			"pagePath": "pages/cart/Cart",
			"text": "购物车"
		}, {
			"iconPath": "static/navbar/png/my.png",
			"selectedIconPath": "static/navbar/png/my-fill.png",
			"pagePath": "pages/my/My",
			"text": "我的"
		}]
	},
	"uniIdRouter": {}
}